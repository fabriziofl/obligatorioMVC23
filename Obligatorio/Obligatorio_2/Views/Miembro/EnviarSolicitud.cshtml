@{
    ViewData["Title"] = "Solicitud de Amistad";
}

<div class="card-header bg-secondary text-white">
    <h2 class="mb-0">Enviar Solicitud de Amistad</h2>
</div>

@if (ViewBag.Usuarios.Count == 0)
{
    <div class="fs-2 mt-5 text-center">No Se Encontraron Usuarios</div>
}

@if (ViewBag.Message != null)
{
    <div class="mt-5 alert alert-success">@ViewBag.Message</div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="mt-5 alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.Usuarios.Count > 0)
{
    @for (int i = 0; i < ViewBag.Usuarios.Count; i++)
    {
        <div class="container mt-5">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="w-25">Nombre</th>
                        <th class="w-25">Apellido</th>
                        <th class="w-25"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="w-25 text-truncate">@ViewBag.Usuarios[i].Nombre</td>
                        <td class="w-25 text-truncate">@ViewBag.Usuarios[i].Apellido</td>
                        <td class="w-25">
                            <form method="post" class="form-inline">
                                <input type="hidden" name="email" value="@ViewBag.Usuarios[i].Email" />
                                <button type="submit" class="btn btn-success mt-3">Enviar Solicitud de Amistad</button>
                            </form>  
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
}